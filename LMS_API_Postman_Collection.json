        },
        {
          "name": "Create Course (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Complete Web Development Course",
                  "type": "text"
                },
                {
                  "key": "shortDescription",
                  "value": "Learn web development from scratch",
                  "type": "text"
                },
                {
                  "key": "fullDescription",
                  "value": "Comprehensive web development course covering HTML, CSS, JavaScript, React, Node.js and more.",
                  "type": "text"
                },
                {
                  "key": "category",
                  "value": "Web Development",
                  "type": "text"
                },
                {
                  "key": "level",
                  "value": "Beginner",
                  "type": "text"
                },
                {
                  "key": "language",
                  "value": "English",
                  "type": "text"
                },
                {
                  "key": "instructorName",
                  "value": "John Smith",
                  "type": "text"
                },
                {
                  "key": "instructorBio",
                  "value": "Senior developer with 10+ years experience",
                  "type": "text"
                },
                {
                  "key": "courseType",
                  "value": "Free",
                  "type": "text"
                },
                {
                  "key": "batchType",
                  "value": "Recorded",
                  "type": "text"
                },
                {
                  "key": "thumbnail",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          }
        }
      ]
    },
